<div class="container">
  <%= form_tag("/media_resources", method: "post") do %>
    <%= label_tag("Type") %>
  <div class="form-group">
    <%= select_tag('media_resources[media_type]', options_for_select(['youtube', 'soundcloud', 'image'])) %>
  </div>
  <div class="form-group">
    <%= text_field_tag 'media_resources[link]', nil, size: 40, placeholder: "Copy and paste link here:" %>
  </div>
  <div class="form-group">
    <%= text_area_tag 'media_resources[content]', nil, size: '40x5', placeholder: "Give your link a description:" %>
  </div>

    <%= hidden_field_tag 'media_resources[showable_type]', @showable_type %>
    <%= hidden_field_tag 'media_resources[showable_id]', @showable_id %>

  <div>
    <%= submit_tag("Submit", :class => "btn btn-primary btn-lg") %>
  </div>
  <% end %>
</div>
