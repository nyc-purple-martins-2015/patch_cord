
<%= form_tag("/media_resources", method: "post") do %>
        <%= label_tag("Type") %>
        <%= select("media_resources[media_type]", nil, ['youtube', 'soundcloud', 'image'], {:include_blank => true}) %>
        <%= text_field_tag 'media_resources[link]', nil, size: 40, placeholder: "Copy and paste link here:" %>
        <%= text_area_tag 'media_resources[content]', nil, size: '40x5', placeholder: "Give your link a description:" %>
        <%= submit_tag("Submit", :class => "btn btn-primary btn-lg") %>
        <% end %>