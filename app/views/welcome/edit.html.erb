<span>Thanks For Joining PatchCord!</span>
<span>We Need To Verify Some Of Your Information</span>
<span>Please Checkout The Form Below</span>
<%= form_for current_user, url: user_path(current_user), method: :put do |f| %>

<% if @errors %>
    <% @user.errors.full_messages.each do |error| %>
      <h2 class=""><%= error %></h2><br>
    <% end %>
  <% end %>

  <p><%= f.label :username %></p>
  <p><%= f.text_field :username %></p>

  <h4>Please enter instruments separated by a comma.</h4>
  <p><%= f.label :instruments %></p>
  <p><%= f.text_field :instruments, :value => "" %></p>

  <p><%= f.label :genres %></p>
    <% @genres.each do |genre| %>
        <p>
          <%= check_box_tag 'genre_types[]', genre %>
          <%= genre %>
        </p>
    <% end %>

  <p><%= f.label :email %></p>
  <p><%= f.text_field :email %></p>

  <p><%= f.label :phone %></p>
  <p><%= f.text_field :phone %></p>

  <p><%= f.label :bio %></p>
  <p><%= f.text_area :bio %></p>


  <%= f.submit "Verify", class: "button" %>
<% end %>
</div>
