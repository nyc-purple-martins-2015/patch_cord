<!DOCTYPE html>
<html>
<head>
  <title>PatchCord</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>

<body>
  <header>
    <a href="/">PatchCord</a>
    <% if logged_in? %>
  <%= link_to current_user.username %>
  <%= link_to "Log Out", logout_path %>
    <% else %>
    <%= link_to 'Google', ouath_login_path(:google_oauth2) %>
    <%= link_to 'Twitter', ouath_login_path(:twitter) %>
    <%= link_to 'Soundcloud', ouath_login_path(:soundcloud) %>
    <%= link_to "Sign Up" %>
  <% end %>
</header>

<%= yield %>

</body>
</html>
