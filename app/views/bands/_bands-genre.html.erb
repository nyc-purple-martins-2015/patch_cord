<div id="band-search-genre">
  <h4>What Genre Are You Looking For?</h4>

  <div>
    <%= form_tag("bands/search", method: "get") do %>
    <% @genres.uniq.each do |genre_obj| %>
    <%= radio_button_tag(:genre, "#{genre_obj.name}") %>
    <%= label_tag("#{genre_obj.name}") %>
  <% end %>
  <%= submit_tag("Search") %>
  <% end %>
  </div>


  <div>
      <h4>Bands</h4>
       <ol>
      <% @bands.each do |band| %>
        <li><%= band.name %></li>
      <% end %>
      </ol>
  </div>

</div>
