<div id="band-search-genre">
  <h4>What Genre Would You Like The Band To Play?</h4>

  <div>
    <%= form_tag("bands/search", method: "post") do %>
    <% @genres.each do |genre_obj| %>
    <%= check_box_tag("[Genre][#{genre_obj.id}]", "#{genre_obj.name}") %>
    <%= label_tag("#{genre_obj.name}") %>
    <% end %>
    <%= hidden_field_tag :group, "Bands" %>
  <%= submit_tag("Search") %>
  <% end %>
  </div>


  <div>
      <h4>Bands</h4>
       <ol>
      <% @bands.each do |band| %>
        <li><%= band.name %></li>
      <% end %>
      </ol>
  </div>

</div>
