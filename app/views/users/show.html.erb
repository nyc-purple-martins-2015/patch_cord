<div class="inner-container">
  <div class="profile-photo"></div>
  <div class="inner-container">

    <h3>Instruments</h3>
    <% @user.instruments.each do |instrument| %>
    <div class="inner-container"><%= instrument.name %></div>
    <% end %>
  </div>

  <div class="inner-container">
    <h3>Genres</h3>
    <% @user.genres.each do |genre| %>
    <div class="inner-container"><%= genre.name %></div>
    <% end %>
  </div>

  <div class="inner-container">
    <h3>Bands</h3>
    <% @user.bands.each do |band| %>
    <div class="inner-container"><%= band.name %></div>
    <% end %>
  </div>

  <div class="inner-container">
    <h3>BIO</h3>
    <p><%= @user.bio %></p>
  </div>

  <% if logged_in? %>
   <%= button_to "Send Email", email_user_path(@user), class: "button" %>

  <% if current_user.id == @user.id %>
  <div class="buttons">
    <%= button_to "Edit Profile", edit_user_path(current_user), method: :get, class: "button" %>
    <%= button_to "Delete Profile", user_path, :confirm => 'Are you sure?',method: :delete, class: "button" %>

    <%= form_tag new_media_resource_path, method: "get" do %>
      <%= hidden_field_tag :user_id, @user.id %>
      <%= submit_tag("Add Media Resource", class: "button") %>
    <% end %>

  </div>
  <% end %>
  <% end %>

  <% if @user.has_media_resources? %>
  <%= button_to "See Our Work", root_path, method: :get, class: "button link_media_resources", data: {id: @user.id} %>
  <div class="media-resources">
    <% @user.media_resources.each do |resource| %>
    <% if resource.media_type == "youtube" %>
    <div> <p> <%= resource.content %>:</p>
      <iframe width="420", height="315", src="<%= youtube_embed_link resource %>" , frameborder="0", allowfullscreen></iframe>
    </div>
    <div>
    <%= button_to "Delete This", media_resource_path(resource), method: :delete, class: "button" %>
    </div>
    <% end %>
    <% if resource.media_type == "soundcloud" %>
    <div> <p><%= resource.content %>:</p>
      <p><%= link_to 'track', resource.link %></p>
    </div>
     <div>
    <%= button_to "Delete This", media_resource_path(resource), method: :delete, class: "button" %>
    </div>
    <% end %>
    <% if resource.media_type == "image" %>
    <div> <p> <%= resource.content %>:</p>
      <img src="<%= resource.link %>">
    </div>
     <div>
    <%= button_to "Delete This", media_resource_path(resource), method: :delete, class: "button" %>
    </div>
    <% end %>
    <% end %>
  </div>
  <% end %>

</div>
